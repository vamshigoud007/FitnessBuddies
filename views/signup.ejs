<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Fitness Buddies</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

<link rel ="stylesheet" href="../assets/css/Style.css">

</head>
<body>

      <% include partials/header.ejs %>

      <div class="signup_content">
        <h3>Sign Up!!</h3>
        <form class="signup-form" method="POST" action="signup">
          <%
          if(error){
            error.forEach(function(item){%>
              <p class="err-msg"><p style="color:black;"><%=item.msg %></p></p>
              <%});} %>
          <div>
        <label for="userID">user ID &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </label>
        <input type="text" name="userID"  placeholder="userID">
        </div>
        <div>
        <label for="FirstName">First Name &nbsp;</label>
        <input type="text" name="FirstName"  placeholder="FirstName">
          </div>
          <div>
        <label for="LastName">Last Name &nbsp;</label>
        <input type="text" name="LastName"  placeholder="LastName">
          </div>
          <div>
        <label for="EmailAddress">EmailAddress </label>
        <input type="EmailAddress" name="EmailAddress"  placeholder="EmailAddress">
        </div>
        <div>
        <label for="Password">Password &nbsp;&nbsp;&nbsp;</label>
        <input type="Password" name="Password" placeholder="********">
      </div>
        <div>
      <label for="Address1Field">address1 &nbsp;&nbsp;&nbsp;</label>
      <textarea name="Address1Field"  placeholder="Address1Field"></textarea>
      </div>
      <div>
    <label for="Address2Field">address2 &nbsp;&nbsp;&nbsp;</label>
    <textarea name="Address2Field"  placeholder="Address2Field"></textarea>
    </div>
      <div>
        <label for="City">City &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
        <input type="text" name="city" placeholder="City">
      </div>
      <div>
        <label for="State">State &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
        <input type="text" name="State" placeholder="State">
      </div>
      <div>
        <label for="zipCode">zipCode &nbsp;&nbsp;</label>
        <input type="number" name="zipCode" placeholder="zipCode">
      </div>
      <div class="submit-but">

        <input type="submit" value="Sign Up">
        </form>

      </div>
    </div>

      <% include partials/footer.ejs %>


    </body>
    </html>
